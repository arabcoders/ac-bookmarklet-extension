{
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "scripts": [
      "background.js"
    ]
  },
  "action": {},
  "name": "AC-Bookmarklet Extension",
  "version": "1.0.0",
  "description": "Add URLs to your bookmarklet instance",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "homepage_url": "https://github.com/arabcoders/ac-bookmarklet-extension",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "acbookmarklet@arabcoders.org",
      "strict_min_version": "113.0"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}